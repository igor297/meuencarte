{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["public/**"]
      }
    }
  ],
  "routes": [
    // Rotas específicas primeiro
    {
      "src": "/api/test", // Rota de teste
      "dest": "server.js"
    },
    {
      "src": "/gerar-pdf", // Rota do PDF
      "methods": ["POST"], // Especificar método POST
      "dest": "server.js"
    },
    // Servir arquivos estáticos diretamente (se possível, senão deixar Express lidar)
    // {
    //   "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot))",
    //   "dest": "/public/$1"
    // },
    // Rota principal e outras não mapeadas (deixar Express lidar)
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
